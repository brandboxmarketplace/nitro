{
    local_certs
    admin localhost:2019
}

example.nitro {
    rewrite * index.php?{query}&p={path}

    php_fastcgi * example.nitro:9000 {
            root /app/web
            index index.php

            env SCRIPT_NAME index.php
            env SCRIPT_FILENAME /app/web/index.php
    }
}

plugins.nitro {
    rewrite * index.php?{query}&p={path}

    php_fastcgi * plugins.nitro:9000 {
            root /app/web
            index index.php

            env SCRIPT_NAME index.php
            env SCRIPT_FILENAME /app/web/index.php
    }
}

extendingcaddy.nitro {
    rewrite * index.php?{query}&p={path}

    php_fastcgi * extendingcaddy.nitro:9000 {
            root /app/web
            index index.php

            env SCRIPT_NAME index.php
            env SCRIPT_FILENAME /app/web/index.php
    }
}

:80 :443 {
    root * /var/www/html
    file_server
}

